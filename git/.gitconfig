[user]
	email = alex@macleod.io
	name = Alex Macleod
[core]
	pager = diff-so-fancy | less
[commit]
	verbose = true
[push]
	default = upstream
[rebase]
	autosquash = true
[diff]
	algorithm = histogram
	colorMoved = default
	colorMovedWS = allow-indentation-change
	mnemonicprefix = true
[pull]
	ff = only
[merge]
	conflictstyle = diff3
	ff = false
[status]
	relativePaths = false
	showStash = true
